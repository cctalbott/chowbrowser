%span.fields
  %li
    = f.label :day, "Day"
    = f.select :day, days_array
  %li
    = f.label :start_hr, "Opens"
    = f.select :start_hr, 0..23, {:prompt => "Choose hour"}
    \:
    \#{f.select :start_min, (00..59).step(5)}
  %li
    = f.label :end_hr, "Closes"
    = f.select :end_hr, 0..23, {:prompt => "Choose hour"}
    \:
    \#{f.select :end_min, (00..59).step(5)}
  %li
    = link_to_remove_fields "remove", f
