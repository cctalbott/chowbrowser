<h1>Sign in</h1>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <fieldset>
    <ol>
      <li>
        <%= f.label :email %>
        <%= f.email_field :email %>
      </li>
      <li>
        <%= f.label :password %>
        <%= f.password_field :password %>
      </li>
      <% if devise_mapping.rememberable? -%>
        <li class="check">
          <%= f.label :remember_me %>
          <%= f.check_box :remember_me %>
        </li>
      <% end -%>
    </ol>
  </fieldset>
  <fieldset>
    <div><%= f.submit "Sign in" %></div>
  </fieldset>
<% end %>

<%= render "links" %>
