- orders.each do |order|
  %tr{:id => "order_#{h order.id}"}
    / <td align="center" class="actions one"></haml:block><haml:silent></haml:silent><haml:block></td>
    %td.id_col{:align => "center"}= h link_to order.id, public_order_path(order.id), :class => "overlay_trigger"
    %td= h link_to truncate(order.restaurant_name), public_orders_by_restaurant_path(order.purchased_at.year, order.purchased_at.month, order.purchased_at.day, Restaurant.find_by_name(order.restaurant_name).id)
    %td.customer_col= h link_to truncate(order.email), public_orders_by_customer_path(order.purchased_at.year, order.purchased_at.month, order.purchased_at.day, Order.find_all_by_email(order.email).index_by { |r| r[:email] }.values)
    %td.date_col= h order.purchased_at.strftime("%Y %b %a %l:%M%p %Z")
    -#%td.price{:align => "right"}= h number_to_currency(order.price)
